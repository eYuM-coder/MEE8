          { background: 'linear-gradient(to right, #0b0c10, #1f2833)', color: '#c5c6c7' },
        ];

        let themeIndex = 0;
        let isTransitioning = false;

        function toggleTheme() {
          if (isTransitioning) return;

          isTransitioning = true;
          const body = document.body;
          const button = document.querySelector('.theme-toggle-button');
          const icon = button.querySelector('i');

          icon.classList.remove('fa-adjust');
          icon.classList.add('fa-spinner');
          icon.style.animation = 'spin 1s linear infinite';

          const overlay = document.createElement('div');
          overlay.style.position = 'absolute';
          overlay.style.top = 0;
          overlay.style.left = 0;
          overlay.style.width = '100%';
          overlay.style.height = `${document.documentElement.scrollHeight}px`;
          overlay.style.zIndex = '-1';
          overlay.style.background = colorThemes[(themeIndex + 1) % colorThemes.length].background;
          overlay.style.opacity = 0;
          overlay.style.transition = 'opacity 1s';

          body.appendChild(overlay);

          setTimeout(() => {
            overlay.style.opacity = 1;
            body.style.color = colorThemes[(themeIndex + 1) % colorThemes.length].color;
          }, 0);

          setTimeout(() => {
            themeIndex = (themeIndex + 1) % colorThemes.length;
            body.style.background = colorThemes[themeIndex].background;
            body.removeChild(overlay);

            icon.classList.remove('fa-spinner');
            icon.classList.add('fa-adjust');
            icon.style.animation = '';

            isTransitioning = false;
          }, 1000);
        }
