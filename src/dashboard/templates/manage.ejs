<%- include("partials/head", { bot, user, path, title: "Neonova - Commands" }) %>
  <style>
    /* Your existing styles */
    .server-selector {
      margin-top: 20px;
    }

    .server-selector .server-btn {
      padding: 10px 30px;
      margin: 5px;
      background-color: #444;
      border: 1px solid #ccc;
      border-radius: 5px;
      text-decoration: none;
      color: #fff;
      display: inline-block;
      transition: background-color 0.3s ease;
    }

    .server-selector .server-btn:hover {
      background-color: #555;
      cursor: pointer;
    }
  </style>
  <div class="content">
    <h2>Manage Server</h2>

    <!-- Server Selector -->
    <div class="server-selector">
      <h2>Select a Server to Manage</h2>
      <div class="servers">
        <% user.guilds.forEach(guild=> { %>
          <% if (!bot.guilds.cache.get(guild.id)) { return } %>
            <% if (guild.icon) { iconurl="https://cdn.discordapp.com/icons/" + guild.id + "/" + guild.icon
              + ".png??size=512" ; } else {
              iconurl="https://cdn.glitch.com/82fe990a-7942-42e3-9790-39807ccdb9f6%2Ficon-404-dark.png?v=1602427904949"
              ; } %>
              <a class="server-btn" href="/dashboard/<%= guild.id %>">
                <img class="server-icon" src="<%= iconurl %>" alt="<%= guild.name %>" />
                <p class="guild-name">
                  <%= guild.name %>
                </p>
              </a>
              <% }); %>
      </div>
    </div>

    <!-- Include any additional content related to managing the server -->

    <%- include("partials/footer") %>
  </div>